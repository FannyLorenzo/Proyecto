<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EntrenamientoActivity">


    <ImageButton
        android:id="@+id/imgbtn_atras"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txt_entrenamiento"
        app:srcCompat="@drawable/ic_regresar"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txt_entrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/entrenamiento"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/imgbtn_atras"
        tools:layout_editor_absoluteX="34dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_entrenamiento"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/actividad_fragmentButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/montserrat"
            android:onClick="onClick"
            android:text="Actividad"
            android:textColor="#241332" />

        <Button
            android:id="@+id/mapa_fragmentButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/montserrat"
            android:onClick="onClick"
            android:text="Mapa"
            android:textColor="#241332" />

        <Button
            android:id="@+id/estadisticas_fragmentButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/montserrat"
            android:onClick="onClick"
            android:text="EstadÃ­sticas"
            android:textColor="#241332" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_fragment"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        >

    </FrameLayout>

    <FrameLayout
        android:id="@+id/music_fragment"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_fragment"

        >

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>